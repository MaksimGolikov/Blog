@using Blog_.Models.DataBase;
@model Tuple<IEnumerable<Topic>,Topic>

        @{
            Layout = "~/Views/AdministoratorPage.cshtml";
        }


        <div id="main">
            <div id="picture">
                <h4> Administrator part</h4>
            </div>
            <div id="button">
                <a href="~/Admin/Create">
                    <h4> Add topic</h4>
                </a>
                <a href="~/Admin/Edit">
                    <h4> Change topic </h4>
                </a>
                <a href="~/Admin/Delete">
                    <h4> Delete topic </h4>
                </a>
            </div>
        </div>



        <div class="docs-content">
            <table>
                <tr>
                    <th>
                        <h4>Select topic for edit</h4>
                    </th>
                </tr>
                @foreach (var item in Model.Item1)
                {
                    <tr>
                        <th>
                            <a href="~/Admin/SetData/@item.Id">Edit @item.NameTopic</a>
                        </th>
                    </tr>
                }
            </table>
          
            <form method="post" action="~/Admin/Edit"">
                <p><b>Name topic</b></p>
                @if(Model.Item2 !=null){
                    <p><input type="text" name="nameTopic" id="nameTopic" value="@Model.Item2.NameTopic" /></p>
                    <input type="hidden" name="Id" value="@Model.Item2.Id" />
                }
                @if(Model.Item2 ==null)
                {
                     <p><input type="text" name="nameTopic" id="nameTopic" /></p>
                }
                <p><b>Text topic</b></p>
                @if(Model.Item2 !=null){
                    <p><textarea rows="15" cols="100" name="ContextTopic" id="ContextTopic" >@Model.Item2.ContextTopic</textarea></p>
                }
                @if(Model.Item2 ==null)
                {
                    <p><textarea rows="15" cols="100" name="ContextTopic" id="ContextTopic"></textarea></p>
                }               
                <p><input type="submit" value="Edit"></p>
            </form>
        </div>

